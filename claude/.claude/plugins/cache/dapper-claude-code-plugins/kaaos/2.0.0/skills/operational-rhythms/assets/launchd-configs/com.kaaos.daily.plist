<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Job identifier -->
    <key>Label</key>
    <string>com.kaaos.daily</string>

    <!-- Human-readable description -->
    <key>ServiceDescription</key>
    <string>KAAOS Daily Digest - Morning knowledge synthesis (~$0.30/run)</string>

    <!-- Command to execute -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/kaaos</string>
        <string>review</string>
        <string>daily</string>
    </array>

    <!-- Schedule: Every day at 7:00 AM local time -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>7</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/ben/.kaaos-knowledge</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>KAAOS_HOME</key>
        <string>/Users/ben/.kaaos-knowledge</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>/Users/ben/.kaaos-knowledge/.kaaos/logs/daily.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/ben/.kaaos-knowledge/.kaaos/logs/daily.error.log</string>

    <!-- Run immediately if missed (e.g., computer was asleep) -->
    <key>RunAtLoad</key>
    <false/>

    <!-- Process configuration -->
    <key>ProcessType</key>
    <string>Background</string>

    <!-- Resource limits -->
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>1024</integer>
    </dict>

    <!-- Timeout: 5 minutes max for daily digest -->
    <key>TimeOut</key>
    <integer>300</integer>

    <!-- Exit codes that indicate success -->
    <key>SuccessfulExitCodes</key>
    <array>
        <integer>0</integer>
    </array>

    <!-- Keep alive configuration -->
    <key>KeepAlive</key>
    <false/>

    <!-- Nice value (lower priority) -->
    <key>Nice</key>
    <integer>10</integer>

    <!-- Prevent multiple instances -->
    <key>AbandonProcessGroup</key>
    <false/>
</dict>
</plist>
