<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Job identifier -->
    <key>Label</key>
    <string>com.kaaos.quarterly</string>

    <!-- Human-readable description -->
    <key>ServiceDescription</key>
    <string>KAAOS Quarterly Review - Comprehensive 90-day strategic analysis with full agent suite (~$40-50/run)</string>

    <!-- Command to execute -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/kaaos</string>
        <string>review</string>
        <string>quarterly</string>
    </array>

    <!--
    Schedule: 1st of January, April, July, October at 3:00 AM local time

    Note: launchd doesn't support "every 3 months" directly.
    This configuration schedules for the 1st of EVERY month at 3 AM,
    but the KAAOS quarterly command internally checks if it's a quarter start
    and exits gracefully if not.

    Alternative: Use 4 separate plist files, one for each quarter start month.
    -->
    <key>StartCalendarInterval</key>
    <array>
        <!-- January 1st at 3:00 AM -->
        <dict>
            <key>Month</key>
            <integer>1</integer>
            <key>Day</key>
            <integer>1</integer>
            <key>Hour</key>
            <integer>3</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
        <!-- April 1st at 3:00 AM -->
        <dict>
            <key>Month</key>
            <integer>4</integer>
            <key>Day</key>
            <integer>1</integer>
            <key>Hour</key>
            <integer>3</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
        <!-- July 1st at 3:00 AM -->
        <dict>
            <key>Month</key>
            <integer>7</integer>
            <key>Day</key>
            <integer>1</integer>
            <key>Hour</key>
            <integer>3</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
        <!-- October 1st at 3:00 AM -->
        <dict>
            <key>Month</key>
            <integer>10</integer>
            <key>Day</key>
            <integer>1</integer>
            <key>Hour</key>
            <integer>3</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
    </array>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/ben/.kaaos-knowledge</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>KAAOS_HOME</key>
        <string>/Users/ben/.kaaos-knowledge</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        <!-- Quarterly uses full agent suite (6 agents in parallel) -->
        <key>KAAOS_MAX_PARALLEL_AGENTS</key>
        <string>6</string>
        <!-- Higher cost tolerance for quarterly -->
        <key>KAAOS_MAX_COST_USD</key>
        <string>75</string>
    </dict>

    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>/Users/ben/.kaaos-knowledge/.kaaos/logs/quarterly.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/ben/.kaaos-knowledge/.kaaos/logs/quarterly.error.log</string>

    <!-- Don't run at load, only on schedule -->
    <key>RunAtLoad</key>
    <false/>

    <!-- Process configuration -->
    <key>ProcessType</key>
    <string>Background</string>

    <!-- Resource limits - maximum for quarterly comprehensive review -->
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>8192</integer>
    </dict>

    <!-- Timeout: 90 minutes max for quarterly review with 6 parallel agents -->
    <key>TimeOut</key>
    <integer>5400</integer>

    <!-- Exit codes that indicate success -->
    <key>SuccessfulExitCodes</key>
    <array>
        <integer>0</integer>
    </array>

    <!-- Keep alive configuration -->
    <key>KeepAlive</key>
    <false/>

    <!-- Nice value (lower priority, runs in background) -->
    <key>Nice</key>
    <integer>15</integer>

    <!-- Prevent multiple instances -->
    <key>AbandonProcessGroup</key>
    <false/>

    <!-- Low priority I/O - quarterly review is not time-critical -->
    <key>LowPriorityIO</key>
    <true/>

    <!-- Throttle interval: don't run more than once per hour even if triggered manually -->
    <key>ThrottleInterval</key>
    <integer>3600</integer>
</dict>
</plist>
